{
  "name": "serimon",
  "version": "0.0.1",
  "description": "Serimon, a Simple Serial Monitor Application",
  "main": "dist/main.js",
  "scripts": {
    "ts": "ts-node --project tsconfig.node.json --files",
    "start": "run-s clean build serve",
    "clean": "rimraf dist",
    "build": "cross-env APP_DEV=false cross-env NODE_ENV=\"development\" webpack --progress --color",
    "serve:watch": "cross-env APP_DEV=true cross-env NODE_ENV=\"development\" webpack --progress --color --watch",
    "serve": "electron dist/main.js",
    "dev": "run-s clean serve:watch",
    "ci": "rimraf node_modules && yarn install --frozen-lockfile",
    "dist:mac": "electron-builder --mac --x64",
    "dist:win": "electron-builder --win --x64",
    "dist:linux": "electron-builder --linux --x64",
    "dist": "electron-builder",
    "rebuild:app-debs": "electron-builder install-app-deps",
    "postinstall": "npm run --silent rebuild:app-debs"
  },
  "author": "WorkRobotics",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.55",
    "@types/react-dom": "^16.9.9",
    "copy-webpack-plugin": "^6.2.1",
    "cross-env": "^7.0.3",
    "electron": "^11.3.0",
    "electron-builder": "^22.10.5",
    "electron-is-dev": "^2.0.0",
    "gulp": "^4.0.2",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "ts-loader": "^8.0.7",
    "typescript": "^4.0.5",
    "webpack": "^5.3.2",
    "webpack-cli": "^4.1.0",
    "webpack-node-externals": "^2.5.2",
    "webpack-stream": "^6.1.2"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.32",
    "@fortawesome/free-brands-svg-icons": "^5.15.1",
    "@fortawesome/free-regular-svg-icons": "^5.15.1",
    "@fortawesome/free-solid-svg-icons": "^5.15.1",
    "@fortawesome/react-fontawesome": "^0.1.12",
    "@rjsf/core": "^2.5.1",
    "bootstrap": "^4.5.3",
    "css-loader": "^5.0.0",
    "dateformat": "^4.5.1",
    "easta": "^5.0.0",
    "electron-connect": "^0.6.3",
    "electron-context-menu": "^2.3.0",
    "electron-is-packaged": "^1.0.2",
    "electron-store": "^7.0.2",
    "emotion": "^10.0.27",
    "konva": "^7.1.4",
    "react": "^17.0.1",
    "react-bootstrap": "^1.4.0",
    "react-dom": "^17.0.1",
    "react-timing-hooks": "^2.0.0",
    "serialport": "^9.0.2",
    "style-loader": "^2.0.0"
  }
}
